<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePenukaranPengguna"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:adjustViewBounds="true">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/namaPenukaranPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Nama Barang">
            </TextView>

            <TextView
                android:id="@+id/deskripsiPenukaranPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="Deskripsi Barang"
                android:textStyle="normal">
            </TextView>
            <TextView
                android:id="@+id/pointPenukaranPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="Point"
                android:textStyle="normal">
            </TextView>
            <TextView
                android:id="@+id/alamatPenukaranPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="Alamat"
                android:textStyle="normal">
            </TextView>
            <TextView
                android:id="@+id/nohpPenukaranPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="Nohp"
                android:textStyle="normal">
            </TextView>
            <TextView
                android:id="@+id/PenukaranTimeStampList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="Tanggal Postingan"
                android:textStyle="italic">
            </TextView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>