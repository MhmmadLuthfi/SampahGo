<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PenjemputanImageList"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:adjustViewBounds="true">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/KategoriPenjemputan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="13dp"
                android:text="Kategori">
            </TextView>

            <TextView
                android:id="@+id/PenjemputanListAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Alamat"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
            </TextView>
            <TextView
                android:id="@+id/PenjemputanListTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Tanggal"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
            </TextView>
            <TextView
                android:id="@+id/PenjemputanListWaktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Waktu"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
            </TextView>
            <TextView
                android:id="@+id/PenjemputanTimeStampList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Tanggal Postingan"
                android:textStyle="italic"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
            </TextView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>