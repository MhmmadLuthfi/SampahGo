<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:padding="40dp"
    android:background="@drawable/login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/image1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#729D39"
        android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF" >

                <EditText
                    android:id="@+id/signup_firstname"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_last_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="30dp"
                    android:padding="15dp"
                    android:layout_marginRight="6dp"
                    android:hint="First Name"
                    android:textColorHint="#729D39"
                    android:textColor="#729D39"/>

                <EditText
                    android:id="@+id/signup_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_first_24"
                    android:layout_marginTop="30dp"
                    android:padding="15dp"
                    android:hint="Last Name"
                    android:drawablePadding="9dp"
                    android:textColorHint="#729D39"
                    android:textColor="#729D39"/>

            </LinearLayout>

            <EditText
                android:id="@+id/signup_alamat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Alamat"
                android:drawablePadding="10dp"
                android:textColorHint="#729D39"
                android:textColor="#729D39"/>

    <EditText
        android:id="@+id/signup_notelpon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="10dp"
        android:hint="Nomor Telepon"
        android:padding="15dp"
        android:textColor="#729D39"
        android:textColorHint="#729D39" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_person_24"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:hint="Email"
        android:drawablePadding="10dp"
        android:textColorHint="#729D39"
        android:textColor="#729D39"/>

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:textColorHint="#729D39"
                android:textColor="#729D39"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <Button
                android:id="@+id/signup_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                app:cornerRadius = "20dp"/>
        </LinearLayout>

    <TextView
        android:id="@+id/loginRedirectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already an Users? Login"
        android:textSize="16sp"
        android:textColor="#729D39"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

</LinearLayout>
